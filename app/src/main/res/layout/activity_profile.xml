<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile_top"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.35"
                    android:background="@color/colorSecondary"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/profile_down"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.65"
                    android:background="@color/colorPrimary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="60dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/profile_details_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="90dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/profile_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Abhishek"
                                android:textColor="@android:color/black"
                                android:textSize="30sp" />

                            <TextView
                                android:id="@+id/profile_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/profile_name"
                                android:layout_centerHorizontal="true"
                                android:text="abhishek@buyhatke.com" />

                            <TextView
                                android:id="@+id/profile_userid"
                                android:layout_width="348dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/profile_email"
                                android:layout_marginBottom="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="Computer Science &amp; Engg\nB.Tech (Hons)\n2014-2018"
                                android:textColor="@android:color/black" />


                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/profile_more_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_details_card"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="32dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:orientation="vertical"
                            >

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="8"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="16dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center"
                                    >

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="Projects"
                                            android:textAlignment="center"
                                            android:fontFamily="@font/nunito_semibold"
                                            android:textSize="16sp"
                                            />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:id="@+id/profile_project_count"
                                            android:text="100"
                                            android:textAlignment="center"
                                            />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="Completed"
                                            android:textAlignment="center"
                                            android:fontFamily="@font/nunito_semibold"
                                            android:textSize="16sp"
                                            />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="100"
                                            android:textAlignment="center"
                                            android:id="@+id/profile_complete_count"
                                            />


                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        >

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="In Progress"
                                            android:textAlignment="center"
                                            android:fontFamily="@font/nunito_semibold"
                                            android:textSize="16sp"
                                            />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="100"
                                            android:textAlignment="center"
                                            android:id="@+id/profile_progress_count"
                                            />


                                    </LinearLayout>




                                </LinearLayout>

                            </android.support.v7.widget.CardView>


                            <Button
                                android:id="@+id/profile_signout"
                                android:layout_width="109dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/button_selector"
                                android:text="Sign out" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:elevation="5dp"
                        android:src="@drawable/ic_plus" />

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

</ScrollView>

