<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:padding="8dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="140dp"
                android:id="@+id/update_leftll"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/update_item_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_semibold"
                android:text="name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/update_item_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_semibold"
                android:text="date"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/update_item_desc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:fontFamily="@font/nunito_semibold"
                android:text="Description" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_toRightOf="@id/update_leftll"
                android:weightSum="2">
                <ImageView
                    android:id="@+id/update_item_iv1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#0f0"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/update_item_iv2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#00f"
                    android:layout_weight="1"/>


            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>